if ARCH_STM32

config MACH_STM32
	bool
	default y
	select ARM_NVIC if CPU_V7M
	help
	  Include support for the STMicro STM32F2 microcontroller

config ARCH_STM32F1
	bool "Support STM32F1 instead of STM32F2"
	default n
	depends on ARCH_STM32
	help
	  Build kernel for the STMicro STM32F1 MCU instead of STM32F2

config ARCH_STM32F7
	bool "Support STM32F7"
	default n
	depends on ARCH_STM32 && !ARCH_STM32F1
	select DMAMEM
	select CPU_CACHE_V7M
	help
	  Build kernel for the STMicro STM32F7 MCU

menu "STM32 I/O interfaces"
	depends on ARCH_STM32

config STM32_DMA
	depends on ARCH_STM32
	bool "Enable STM32 DMA controller for peripherals"
	default n

config STM32_USART1
	depends on ARCH_STM32 && SERIAL_STM32
	bool "Enable STM32 USART1 port"
	default n

config STM32_USART2
	depends on ARCH_STM32 && SERIAL_STM32
	bool "Enable STM32 USART2 port"
	default n

config STM32_USART3
	depends on ARCH_STM32 && SERIAL_STM32
	bool "Enable STM32 USART3 port"
	default y

config STM32_USART4
	depends on ARCH_STM32 && SERIAL_STM32
	bool "Enable STM32 USART4 port"
	default n

config STM32_USART5
	depends on ARCH_STM32 && SERIAL_STM32 && !ARCH_STM32F1
	bool "Enable STM32 USART5 port"
	default n

config STM32_USART6
	depends on ARCH_STM32 && SERIAL_STM32 && !ARCH_STM32F1
	bool "Enable STM32 USART6 port"
	default n

config STM32_USART7
	depends on ARCH_STM32 && SERIAL_STM32 && !ARCH_STM32F1
	bool "Enable STM32 USART7 port"
	default n

config STM32_USART8
	depends on ARCH_STM32 && SERIAL_STM32 && !ARCH_STM32F1
	bool "Enable STM32 USART8 port"
	default n

config STM32_MAC
	depends on ARCH_STM32 && STM32_ETHER
	bool "Enable STM32 Ethernet port"
	default y

config STM32_SPI1
	depends on ARCH_STM32 && SPI_STM32
	bool "Enable STM32 SPI1 port"
	default n

config STM32_SPI2
	depends on ARCH_STM32 && SPI_STM32
	bool "Enable STM32 SPI2 port"
	default n

config STM32_SPI3
	depends on ARCH_STM32 && SPI_STM32
	bool "Enable STM32 SPI3 port"
	default n

config STM32_SPI4
	depends on ARCH_STM32 && SPI_STM32
	bool "Enable STM32 SPI4 port"
	default n

config STM32_SPI5
	depends on ARCH_STM32 && SPI_STM32
	bool "Enable STM32 SPI5 port"
	default n

config STM32_SPI6
	depends on ARCH_STM32 && SPI_STM32
	bool "Enable STM32 SPI6 port"
	default n

config STM32_I2C1
	depends on ARCH_STM32 && (I2C_STM32 || I2C_STM32F7) && !I2C_GPIO
	bool "Enable STM32 I2C1 port"
	default n

config STM32_I2C2
	depends on ARCH_STM32 && (I2C_STM32 || I2C_STM32F7)
	bool "Enable STM32 I2C2 port"
	default n

config STM32_I2C3
	depends on ARCH_STM32 && (I2C_STM32 || I2C_STM32F7)
	bool "Enable STM32 I2C3 port"
	default n

config STM32_I2C4
	depends on I2C_STM32F7
	bool "Enable STM32 I2C4 port"
	default n

config STM32_SD
	depends on ARCH_STM32 && MMC_ARMMMCI
	bool "Enable STM32 SD Card interface"
	default n

config STM32_SD_DMA
	depends on STM32_SD && STM32_DMA && MMC_BLOCK_BOUNCE
	bool "Use DMA for the SD Card Interface"
	default y

config STM32_RTC
	depends on ARCH_STM32 && RTC_DRV_STM32F2
	bool "Enable STM32 RTC"
	default n

config STM32_USB_OTG_FS
	depends on ARCH_STM32 && USB_DWC2
	bool "Enable STM32 USB OTG FS"
	default n

choice
	prompt "USB FS Role"
	depends on STM32_USB_OTG_FS
	help
	  Integrated USB Full-Speed controller mode

config STM32_USB_OTG_FS_HOST
	bool "Host"
	select USB_DWC2_HOST
	select USB_DWC2_PLATFORM

config STM32_USB_OTG_FS_DEVICE
	bool "Device"
	select USB_DWC2_PERIPHERAL
	select USB_GADGET
	select USB_GADGET_SELECTED

endchoice

config STM32_USB_OTG_HS
	depends on ARCH_STM32 && USB_DWC2
	bool "Enable STM32 USB OTG HS"
	default n

choice
	prompt "USB HS Role"
	depends on STM32_USB_OTG_HS
	help
	  Integrated USB High-Speed controller mode

config STM32_USB_OTG_HS_HOST
	bool "Host"
	select USB_DWC2_HOST
	select USB_DWC2_PLATFORM

config STM32_USB_OTG_HS_DEVICE
	bool "Device"
	select USB_DWC2_PERIPHERAL
	select USB_GADGET
	select USB_GADGET_SELECTED
	select USB_GADGET_DUALSPEED

endchoice

config STM32_GPIO
	depends on ARCH_STM32 && GPIOLIB
	bool "Enable STM32 GPIO"
	default y
	help
	  Include support for the STM32 GPIO

config STM32_GPIO_INT
	depends on STM32_GPIO
	bool "Enable STM32 GPIO interrupts"
	default y
	help
	  Include support for the STM32 GPIO interrupts

config STM32_FB
	depends on ARCH_STM32 && FB_STM32F4
	bool "Enable STM32F4x9 LTDC framebuffer"
	default n

endmenu

endif
